<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration_nickname_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/large_layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/registration_nickname_view"
        app:layout_constraintRight_toRightOf="@id/registration_nickname_view"
        app:layout_constraintBottom_toBottomOf="@id/registration_nickname_view"
        app:layout_constraintLeft_toLeftOf="@id/registration_nickname_view"
        >

        <ImageView
            android:id="@+id/registration_nickname_fragment_app_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:fontFamily="@font/montserrat"
            android:text="@string/create_nickname"
            android:textColor="@color/grey_dark"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nicknameInputLayout"
            style="@style/EditTextOutlinedStyle"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:textColorHint="@color/grey_light"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error"
            app:errorIconTint="@color/red"
            app:errorTextColor="@color/red"
            app:hintTextColor="@color/blue"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registration_nickname_fragment_nickname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextOutlinedStyle"
                android:fontFamily="@font/montserrat"
                android:hint="@string/nickname"
                android:inputType="textPersonName"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/prevButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        app:layout_constraintLeft_toLeftOf="@id/registration_nickname_view"
        app:layout_constraintBottom_toBottomOf="@id/registration_nickname_view"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:src="@drawable/arrow_right"
        app:layout_constraintRight_toRightOf="@id/registration_nickname_view"
        app:layout_constraintBottom_toBottomOf="@id/registration_nickname_view"
        />


</androidx.constraintlayout.widget.ConstraintLayout>