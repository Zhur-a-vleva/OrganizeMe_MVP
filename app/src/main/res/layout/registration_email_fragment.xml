<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/large_layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/registration"
        app:layout_constraintLeft_toLeftOf="@id/registration"
        app:layout_constraintRight_toRightOf="@id/registration"
        app:layout_constraintTop_toTopOf="@id/registration">

        <ImageView
            android:id="@+id/app_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/first_hello"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:fontFamily="@font/source_sans_pro_light"
            android:text="@string/first_hello"
            android:textColor="@color/grey_dark" />

        <EditText
            android:id="@+id/email_input"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:fontFamily="@font/source_sans_pro_light"
            android:hint="@string/email_input"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/grey_light" />

        <TextView
            android:id="@+id/account_exist"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_light"
            android:text="@string/account_exist"
            android:textColor="@color/grey_light" />

    </LinearLayout>

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/registration"
        app:layout_constraintRight_toRightOf="@id/registration" />

</androidx.constraintlayout.widget.ConstraintLayout>