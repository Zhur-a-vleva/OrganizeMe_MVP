<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registrationPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/large_layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/registrationPassword"
        app:layout_constraintLeft_toLeftOf="@id/registrationPassword"
        app:layout_constraintRight_toRightOf="@id/registrationPassword"
        app:layout_constraintTop_toTopOf="@+id/registrationPassword">

        <ImageView
            android:id="@+id/registrationPasswordImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:fontFamily="@font/montserrat"
            android:text="@string/create_password"
            android:textColor="@color/grey_dark" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            style="@style/EditTextOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:textColorHint="@color/grey_light"
            app:endIconDrawable="@drawable/eye"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/grey_light"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error"
            app:errorIconTint="@color/red"
            app:errorTextColor="@color/red"
            app:hintTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                style="@style/EditTextOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:hint="@string/password"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/prevButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toBottomOf="@id/registrationPassword"
        app:layout_constraintLeft_toLeftOf="@id/registrationPassword" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/registrationPassword"
        app:layout_constraintRight_toRightOf="@id/registrationPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>